@model IEnumerable<Sample>
@{
    var alertClass = "initial";
    var alertText = "initial";

    if (ViewBag.alertMessage == "Delete")
    {
        alertClass = "success";
        alertText = "Kayıt Silindi";
    }
    else if (ViewBag.alertMessage == "Error")
    {
        alertClass = "danger";
        alertText = "Hata Oluştu.";
    }
}

<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
            <ul class="list-group">
                <a asp-controller="Home" asp-action="Create" class="list-group-item active">Yeni Ekle</a>
                <a class="list-group-item">Başka Bir</a>
            </ul>
        </div>
        <div class="col-md-9">

            @{
                if (alertClass != "initial")
                {
                    <div class="alert alert-@alertClass alert-dismissible fade show mb-2" role="alert">
                        <strong>@alertText</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
            }

                    <table class="table table-striped table-responsive table-sm table-hover" id="mydatatable">

                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Müşteri</th>
                                <th>Beden</th>
                                <th>Tipi</th>
                                <th>Geliş Tarihi</th>
                                <th>Personel</th>
                                <th>xxxxx</th>
                                <th>xxxxx</th>
                                <th>xxxxx</th>
                                <th>xxxxx</th>
                                <th>xxxxx</th>
                                <th>xxxxx</th>
                                <th>xxxxx</th>
                                <th>xxxxx</th>
                            </tr>
                        </tfoot>
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Müşteri</th>
                                <th scope="col">Beden</th>
                                <th scope="col">Tipi</th>
                                <th scope="col">Geliş Tarihi</th>
                                <th scope="col">Personel</th>
                                <th scope="col">xxxxx</th>
                                <th scope="col">xxxxx</th>
                                <th scope="col">xxxxx</th>
                                <th scope="col">xxxxx</th>
                                <th scope="col">xxxxx</th>
                                <th scope="col">xxxxx</th>
                                <th scope="col">xxxxx</th>
                                <th scope="col">xxxxx</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.SampleId</th>
                                    <td>@item.Customer</td>
                                    <td>@item.Size</td>
                                    <td>@item.SampleType</td>
                                    <td>@item.RequestDate.ToString("d")</td>
                                    <td>@item.EmployeeId</td>
                                    <td>xxxxx</td>
                                    <td>xxxxx</td>
                                    <td>xxxxx</td>
                                    <td>xxxxx</td>
                                    <td>xxxxx</td>
                                    <td>xxxxx</td>
                                    <td>xxxxx</td>
                                    <td>xxxxx</td>
                                    <td><a class="btn btn-sm btn-warning" asp-controller="Home" asp-action="Details" asp-route-id="@item.SampleId">Güncelle</a></td>
                                    <td><a class="btn btn-sm btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@item.SampleId" onclick="return confirmDel();">Sil</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
        </div>
    </div>
</div>

<script src="https://cdn.datatables.net/buttons/1.5.6/js/dataTables.buttons.min.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.flash.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.html5.min.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.print.min.js" type="text/javascript"></script>


<script type="text/javascript">


    function confirmDel() {
        var agree = confirm("Bu içeriği silmek istediğinizden emin misiniz?\nBu işlem geri alınamaz!");
        if (agree) {
            return true;
        }
        else {
            return false;
        }
    }

    $(document).ready(function () {

           // Setup - add a text input to each footer cell
        $('#mydatatable tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" placeholder="Search ' + title + '" />');
        });


        //datatable
        var table = $('#mydatatable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ],
            "language": {
                "decimal": "",
                "emptyTable": "No data available in table",
                "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                "infoEmpty": "Showing 0 to 0 of 0 entries",
                "infoFiltered": "(filtered from _MAX_ total entries)",
                "infoPostFix": "",
                "thousands": ",",
                "lengthMenu": "Show _MENU_ entries",
                "loadingRecords": "Loading...",
                "processing": "Processing...",
                "search": "Search:",
                "zeroRecords": "No matching records found",
                "paginate": {
                    "first": "İlk",
                    "last": "Son",
                    "next": "Önceki",
                    "previous": "Sonraki"
                },
                "aria": {
                    "sortAscending": ": activate to sort column ascending",
                    "sortDescending": ": activate to sort column descending"
                }
            }
        });

           // Apply the search
        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });
    });
</script>

